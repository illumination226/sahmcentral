<h1>Listing pages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th>Area one</th>
    <th>Area two</th>
    <th>Area three</th>
    <th>Area four</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.name %></td>
    <td><%=h page.title %></td>
    <td><%=h page.content %></td>
    <td><%=h page.area_one %></td>
    <td><%=h page.area_two %></td>
    <td><%=h page.area_three %></td>
    <td><%=h page.area_four %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New page', new_page_path %>